---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import TOC from '../components/TOC.astro';
import FAQ from '../components/FAQ.astro';

const breadcrumbs = [
    { label: 'Etusivu', href: '/' },
    { label: 'Vartijakoulutus', href: '/vartijakoulutus' },
    { label: 'Oppisopimuskoulutus' }
];

const tocItems = [
    { id: 'intro', label: 'Johdanto' },
    { id: 'mika-on', label: 'Mikä on oppisopimus?' },
    { id: 'edut', label: 'Oppisopimuksen edut' },
    { id: 'miten-toimii', label: 'Miten oppisopimus toimii?' },
    { id: 'vaatimukset', label: 'Vaatimukset' },
    { id: 'tyonantajalle', label: 'Työnantajalle' },
    { id: 'faq', label: 'Usein kysytyt kysymykset' }
];

const jsonLd = [
    {
        "@type": "Organization",
        "@id": "https://vartijaksi.com/#organization",
        "name": "Vartijaksi.com",
        "url": "https://vartijaksi.com"
    },
    {
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Etusivu", "item": "https://vartijaksi.com/" },
            { "@type": "ListItem", "position": 2, "name": "Vartijakoulutus", "item": "https://vartijaksi.com/vartijakoulutus" },
            { "@type": "ListItem", "position": 3, "name": "Oppisopimuskoulutus", "item": "https://vartijaksi.com/oppisopimuskoulutus" }
        ]
    },
    {
        "@type": "Article",
        "@id": "https://vartijaksi.com/oppisopimuskoulutus#article",
        "headline": "Oppisopimuskoulutus turvallisuusalalle - Opiskele palkallisena",
        "description": "Kattava opas oppisopimuskoulutukseen turvallisuusalalla. Opiskele vartijaksi työn ohessa ja saa palkkaa koko koulutuksen ajan.",
        "datePublished": "2024-01-15",
        "dateModified": "2026-01-01",
        "author": {"@id": "https://vartijaksi.com/#organization"},
        "inLanguage": "fi"
    }
];

const faqItems = [
    {
        question: "Paljonko oppisopimuksella tienaa?",
        answer: "Oppisopimuskoulutuksessa saat työehtosopimuksen mukaista palkkaa, joka turvallisuusalalla on noin 1 800-2 400 €/kk. Palkka sovitaan työnantajan kanssa, mutta sen tulee olla vähintään TES:n minimipalkan mukainen."
    },
    {
        question: "Voiko oppisopimuksen tehdä ilman alan kokemusta?",
        answer: "Kyllä. Oppisopimus on nimenomaan suunniteltu kouluttamaan uusia ammattilaisia alalle. Työnantaja voi hakea sinulle väliaikaisen vartijakortin (40h koulutuksella) koulutuksen ajaksi."
    },
    {
        question: "Kuinka kauan oppisopimuskoulutus kestää?",
        answer: "Vartijan peruskoulutuksen (120h) voi suorittaa oppisopimuksella muutamassa kuukaudessa. Turvallisuusalan perustutkinto (180 osp) kestää tyypillisesti 1-2 vuotta riippuen aiemmasta osaamisestasi."
    },
    {
        question: "Kuka maksaa koulutuksen?",
        answer: "Oppisopimuskoulutus on opiskelijalle maksutonta. Koulutuksen kustantaa oppilaitos, ja työnantaja saa usein koulutuskorvausta oppisopimuksesta. Sinulle maksetaan palkkaa normaalisti."
    },
    {
        question: "Mitä jos työnantaja ei jatka työsopimusta?",
        answer: "Oppisopimus on määräaikainen työsuhde. Jos työnantaja ei jatka sopimusta, voit hakea uutta oppisopimusta toisen työnantajan kanssa tai jatkaa opiskelua muulla tavalla. Suoritetut opinnot säilyvät."
    }
];

const benefits = [
    { title: "Palkka koko ajan", description: "Saat täyttä palkkaa koulutuksen aikana" },
    { title: "Maksuton koulutus", description: "Ei koulutuskustannuksia opiskelijalle" },
    { title: "Käytännön oppiminen", description: "Opit työn ohessa oikeissa tehtävissä" },
    { title: "Työpaikka valmiina", description: "Olet jo työsuhteessa alalle" }
];

const processSteps = [
    { step: 1, title: "Työnantajan löytäminen", description: "Hae vartijan paikkaa, jossa oppisopimus on mahdollinen. Mainitse kiinnostuksesi oppisopimukseen hakemuksessa." },
    { step: 2, title: "Sopimuksen teko", description: "Työnantaja, oppilaitos ja sinä allekirjoitatte oppisopimuksen. Samalla laaditaan henkilökohtainen osaamisen kehittämissuunnitelma (HOKS)." },
    { step: 3, title: "Työssä oppiminen", description: "Suurin osa (noin 80%) oppimisesta tapahtuu työpaikalla. Työpaikkaohjaaja ohjaa ja arvioi edistymistäsi." },
    { step: 4, title: "Tietopuolinen koulutus", description: "Noin 20% ajasta opiskelet oppilaitoksessa tai verkossa. Teoria-opinnot tukevat käytännön oppimista." },
    { step: 5, title: "Näytöt ja valmistuminen", description: "Osoitat osaamisesi näytöillä työpaikalla. Hyväksyttyjen näyttöjen jälkeen saat tutkintotodistuksen." }
];
---

<BaseLayout
    title="Oppisopimuskoulutus turvallisuusalalle - Opiskele palkallisena | Vartijaksi.com"
    description="Oppisopimuskoulutus on erinomainen tapa kouluttautua vartijaksi. Opiskele työn ohessa, saa palkkaa ja hanki tutkinto ilman koulutuskustannuksia."
    canonical="https://vartijaksi.com/oppisopimuskoulutus"
    type="article"
    publishedTime="2024-01-15"
    modifiedTime="2026-01-01"
    jsonLd={jsonLd}
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <Breadcrumbs items={breadcrumbs} />

        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <TOC items={tocItems} />

            <article class="flex-1 min-w-0">
                <header class="mb-8 md:mb-12">
                    <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary mb-4">
                        <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                        </svg>
                        Päivitetty 1.1.2026
                    </div>
                    <h1 class="text-2xl sm:text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-slate-900 via-primary to-slate-700 dark:from-white dark:via-primary dark:to-slate-300 bg-clip-text text-transparent">
                        Oppisopimuskoulutus
                    </h1>
                    <p class="text-base sm:text-lg text-slate-600 dark:text-text-dim max-w-3xl">
                        Opiskele vartijaksi työn ohessa ja saa palkkaa koko koulutuksen ajan. Erinomainen vaihtoehto alanvaihtajille ja käytännöstä oppiville.
                    </p>
                </header>

                <section id="intro" class="mb-10 md:mb-14 scroll-mt-24">
                    <div class="grid sm:grid-cols-3 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-emerald-600 dark:text-emerald-400 mb-2">Palkka</div>
                            <div class="text-sm font-medium">Koko ajan</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">TES:n mukainen palkka</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">80%</div>
                            <div class="text-sm font-medium">Työssä oppimista</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">käytännön tehtävissä</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">0 €</div>
                            <div class="text-sm font-medium">Koulutuskustannukset</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">maksuton opiskelijalle</div>
                        </div>
                    </div>
                </section>

                <section id="mika-on" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Mikä on oppisopimuskoulutus?</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed mb-4">
                            Oppisopimuskoulutus on ammatillisen koulutuksen muoto, jossa suurin osa oppimisesta tapahtuu työpaikalla. Olet työsuhteessa työnantajaan ja saat palkkaa normaalisti, mutta samalla suoritat ammatillista tutkintoa.
                        </p>
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Turvallisuusalalla oppisopimuksella voi suorittaa joko vartijan peruskoulutuksen (120h) tai koko turvallisuusalan perustutkinnon (180 osaamispistettä). Oppisopimus sopii erityisesti aikuisille, jotka haluavat vaihtaa alaa tai kouluttautua uuteen ammattiin ilman tulojen menetystä.
                        </p>
                    </div>
                </section>

                <section id="edut" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Oppisopimuksen edut</h2>

                    <div class="grid sm:grid-cols-2 gap-4">
                        {benefits.map((benefit) => (
                            <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                                <div class="flex items-start gap-3">
                                    <div class="w-8 h-8 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center flex-shrink-0">
                                        <svg class="w-4 h-4 text-emerald-600 dark:text-emerald-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                            <polyline points="20 6 9 17 4 12"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="font-bold mb-1">{benefit.title}</h3>
                                        <p class="text-sm text-slate-600 dark:text-text-dim">{benefit.description}</p>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>

                <section id="miten-toimii" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Miten oppisopimus toimii?</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Oppisopimuskoulutus etenee vaiheittain työnantajan, oppilaitoksen ja opiskelijan yhteistyönä.
                    </p>

                    <div class="space-y-4">
                        {processSteps.map((item) => (
                            <div class="relative pl-12 pb-4 last:pb-0">
                                <div class="absolute left-0 top-0 w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center text-sm font-bold">
                                    {item.step}
                                </div>
                                <div class="absolute left-[15px] top-10 bottom-0 w-0.5 bg-slate-200 dark:bg-surface-dark-lighter last:hidden"></div>
                                <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                                    <h3 class="font-bold mb-1">{item.title}</h3>
                                    <p class="text-sm text-slate-600 dark:text-text-dim">{item.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>

                <section id="vaatimukset" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Vaatimukset opiskelijalle</h2>

                    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-surface-dark-lighter mb-6">
                        <h3 class="font-bold mb-4">Perusvaatimukset</h3>
                        <ul class="space-y-3">
                            <li class="flex items-start gap-3 text-sm text-slate-600 dark:text-text-dim">
                                <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                <span><strong class="text-slate-900 dark:text-white">Ikä:</strong> Vähintään 18 vuotta (vartijakortin vaatimus)</span>
                            </li>
                            <li class="flex items-start gap-3 text-sm text-slate-600 dark:text-text-dim">
                                <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                <span><strong class="text-slate-900 dark:text-white">Kuntoisuus:</strong> Työn edellyttämä fyysinen kunto</span>
                            </li>
                            <li class="flex items-start gap-3 text-sm text-slate-600 dark:text-text-dim">
                                <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                <span><strong class="text-slate-900 dark:text-white">Suomen kieli:</strong> Riittävä suomen kielen taito (työ- ja koulutuskieli)</span>
                            </li>
                            <li class="flex items-start gap-3 text-sm text-slate-600 dark:text-text-dim">
                                <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                <span><strong class="text-slate-900 dark:text-white">Työnantaja:</strong> Löydettävä työnantaja, joka tekee oppisopimuksen</span>
                            </li>
                        </ul>
                    </div>

                    <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-xl p-5">
                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-amber-600 dark:text-amber-400 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/>
                                <path d="M12 9v4"/>
                                <path d="M12 17h.01"/>
                            </svg>
                            <p class="text-sm text-amber-800 dark:text-amber-200">
                                <strong>Huomio:</strong> Vartijakortin saamiseksi tarvitaan hyväksytty turvallisuusselvitys. Jos sinulla on rikosrekisterimerkintöjä, selvitä tilanne poliisilta ennen oppisopimuksen solmimista.
                            </p>
                        </div>
                    </div>
                </section>

                <section id="tyonantajalle" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Tietoa työnantajalle</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Oppisopimus on työnantajalle erinomainen tapa kouluttaa motivoituneita työntekijöitä.
                    </p>

                    <div class="grid sm:grid-cols-2 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <circle cx="12" cy="12" r="10"/>
                                    <path d="M12 6v6l4 2"/>
                                </svg>
                                Hyödyt työnantajalle
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li>Koulutuskorvaus oppilaitokselta</li>
                                <li>Osaava ja sitoutunut työntekijä</li>
                                <li>Koulutus räätälöity yrityksen tarpeisiin</li>
                                <li>Työntekijä tuntee talon tavat</li>
                            </ul>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                </svg>
                                Työnantajan velvollisuudet
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li>TES:n mukainen palkka opiskelijalle</li>
                                <li>Nimetty työpaikkaohjaaja</li>
                                <li>Monipuoliset työtehtävät</li>
                                <li>Aikaa teoriaopintoihin</li>
                            </ul>
                        </div>
                    </div>

                    <div class="bg-primary/5 dark:bg-primary/10 border border-primary/20 rounded-xl p-5">
                        <p class="text-sm text-slate-600 dark:text-text-dim">
                            <strong class="text-slate-900 dark:text-white">Kiinnostaako oppisopimus?</strong> Ota yhteyttä lähimpään ammatilliseen oppilaitokseen tai turvallisuusalan koulutuksen tarjoajaan. He auttavat oppisopimuksen järjestämisessä.
                        </p>
                    </div>
                </section>

                <section id="faq" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-6">Usein kysytyt kysymykset</h2>
                    <div class="space-y-3">
                        {faqItems.map((item) => (
                            <FAQ question={item.question} answer={item.answer} />
                        ))}
                    </div>
                </section>

                <section class="mb-10 md:mb-14">
                    <h2 class="text-lg font-bold mb-4">Lähteet</h2>
                    <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://opintopolku.fi/konfo/fi/sivu/oppisopimuskoulutus" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                Opintopolku – Oppisopimuskoulutus
                            </a>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://www.oph.fi/fi/koulutus-ja-tutkinnot/oppisopimuskoulutus" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                Opetushallitus – Oppisopimuskoulutus
                            </a>
                        </li>
                    </ul>
                </section>

                <section class="grid sm:grid-cols-2 gap-4">
                    <a href="/turvallisuusalan-perustutkinto" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Turvallisuusalan perustutkinto</h3>
                        <p class="text-xs text-slate-600 dark:text-text-dim">Laaja ammatillinen tutkinto</p>
                    </a>
                    <a href="/vartijakoulutus" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Vartijakoulutus</h3>
                        <p class="text-xs text-slate-600 dark:text-text-dim">Vertaile koulutusmuotoja</p>
                    </a>
                </section>
            </article>
        </div>
    </div>
</BaseLayout>
