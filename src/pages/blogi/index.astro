---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const breadcrumbs = [
    { label: 'Etusivu', href: '/' },
    { label: 'Blogi' }
];

const jsonLd = [
    {
        "@type": "Organization",
        "@id": "https://vartijaksi.com/#organization",
        "name": "Vartijaksi.com",
        "url": "https://vartijaksi.com"
    },
    {
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Etusivu", "item": "https://vartijaksi.com/" },
            { "@type": "ListItem", "position": 2, "name": "Blogi", "item": "https://vartijaksi.com/blogi" }
        ]
    },
    {
        "@type": "CollectionPage",
        "@id": "https://vartijaksi.com/blogi#webpage",
        "url": "https://vartijaksi.com/blogi",
        "name": "Blogi - Vartijaksi.com",
        "description": "Artikkelit ja uutiset turvallisuusalasta, vartijakoulutuksesta ja alan työelämästä.",
        "isPartOf": {"@id": "https://vartijaksi.com/#website"},
        "inLanguage": "fi"
    }
];

const articles = [
    {
        slug: "vartija-vai-jarjestyksenvalvoja",
        title: "Vartija vai järjestyksenvalvoja – kumpi sopii sinulle paremmin?",
        description: "Vertaile vartijan ja järjestyksenvalvojan työtä: työympäristöt, koulutukset, työajat ja ansiot.",
        category: "Vertailu",
        date: "2026-01-01",
        dateFormatted: "1.1.2026"
    },
    {
        slug: "tyollistyminen-koulutuksen-jalkeen",
        title: "Kuinka nopeasti vartijaksi voi työllistyä koulutuksen jälkeen?",
        description: "Vartiointiala tarjoaa nopean väylän työelämään. Lue, miten nopeasti koulutuksen jälkeen voi päästä töihin.",
        category: "Työllistyminen",
        date: "2026-01-01",
        dateFormatted: "1.1.2026"
    },
    {
        slug: "vartijoiden-tes",
        title: "Vartijoiden TES – mitä vartiointialan työehtosopimus tarkoittaa työntekijälle?",
        description: "Kattava opas vartiointialan työehtosopimukseen. Lue, mitä TES määrittelee palkasta, työajoista ja lisistä.",
        category: "TES & Palkkaus",
        date: "2026-01-01",
        dateFormatted: "1.1.2026"
    },
    {
        slug: "turvallisuusala-muutoksessa",
        title: "Turvallisuusala muutoksessa – miten vartijan työ on muuttunut viime vuosina?",
        description: "Vartijan työ on muuttunut merkittävästi. Tarkastelemme, miten asiakaspalvelu, teknologia ja koulutus ovat muokanneet alaa.",
        category: "Artikkeli",
        date: "2026-01-01",
        dateFormatted: "1.1.2026"
    }
];
---

<BaseLayout
    title="Blogi - Artikkelit turvallisuusalasta | Vartijaksi.com"
    description="Lue artikkelit ja uutiset turvallisuusalasta, vartijakoulutuksesta ja alan työelämästä. Ajantasaista tietoa alalle aikoville ja ammattilaisille."
    canonical="https://vartijaksi.com/blogi"
    type="website"
    jsonLd={jsonLd}
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <Breadcrumbs items={breadcrumbs} />

        <header class="mb-10 md:mb-14">
            <h1 class="text-2xl sm:text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-slate-900 via-primary to-slate-700 dark:from-white dark:via-primary dark:to-slate-300 bg-clip-text text-transparent">
                Blogi
            </h1>
            <p class="text-base sm:text-lg text-slate-600 dark:text-text-dim max-w-3xl">
                Artikkelit ja uutiset turvallisuusalasta, vartijakoulutuksesta ja alan työelämästä.
            </p>
        </header>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {articles.map(article => (
                <article class="group flex flex-col bg-white dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-surface-dark-lighter overflow-hidden hover:border-primary dark:hover:border-primary transition-colors">
                    <div class="p-6 flex flex-col flex-1">
                        <div class="flex items-center gap-3 mb-3">
                            <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-semibold text-primary">
                                {article.category}
                            </span>
                            <time datetime={article.date} class="text-xs text-slate-500 dark:text-text-dim">
                                {article.dateFormatted}
                            </time>
                        </div>
                        <h2 class="text-lg font-bold mb-2 group-hover:text-primary transition-colors">
                            <a href={`/blogi/${article.slug}`} class="hover:text-primary">
                                {article.title}
                            </a>
                        </h2>
                        <p class="text-sm text-slate-600 dark:text-text-dim flex-1 mb-4">
                            {article.description}
                        </p>
                        <a href={`/blogi/${article.slug}`} class="inline-flex items-center text-sm font-semibold text-primary hover:text-primary/80 transition-colors">
                            Lue artikkeli
                            <svg class="ml-1 w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M5 12h14"/>
                                <path d="m12 5 7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </article>
            ))}
        </div>

    </div>
</BaseLayout>
