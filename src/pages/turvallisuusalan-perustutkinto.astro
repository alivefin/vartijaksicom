---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import TOC from '../components/TOC.astro';
import FAQ from '../components/FAQ.astro';

const breadcrumbs = [
    { label: 'Etusivu', href: '/' },
    { label: 'Vartijakoulutus', href: '/vartijakoulutus' },
    { label: 'Turvallisuusalan perustutkinto' }
];

const tocItems = [
    { id: 'intro', label: 'Johdanto' },
    { id: 'mika-on', label: 'Mikä on perustutkinto?' },
    { id: 'sisalto', label: 'Tutkinnon sisältö' },
    { id: 'suoritustavat', label: 'Suoritustavat' },
    { id: 'tyollistyminen', label: 'Työllistyminen' },
    { id: 'faq', label: 'Usein kysytyt kysymykset' }
];

const jsonLd = [
    {
        "@type": "Organization",
        "@id": "https://vartijaksi.com/#organization",
        "name": "Vartijaksi.com",
        "url": "https://vartijaksi.com"
    },
    {
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Etusivu", "item": "https://vartijaksi.com/" },
            { "@type": "ListItem", "position": 2, "name": "Vartijakoulutus", "item": "https://vartijaksi.com/vartijakoulutus" },
            { "@type": "ListItem", "position": 3, "name": "Turvallisuusalan perustutkinto", "item": "https://vartijaksi.com/turvallisuusalan-perustutkinto" }
        ]
    },
    {
        "@type": "Article",
        "@id": "https://vartijaksi.com/turvallisuusalan-perustutkinto#article",
        "headline": "Turvallisuusalan perustutkinto - Laaja ammatillinen koulutus",
        "description": "Kattava opas turvallisuusalan perustutkintoon. 1-3 vuoden ammatillinen koulutus, joka sisältää vartijakoulutuksen ja paljon muuta.",
        "datePublished": "2024-01-15",
        "dateModified": "2026-01-01",
        "author": {"@id": "https://vartijaksi.com/#organization"},
        "inLanguage": "fi"
    }
];

const faqItems = [
    {
        question: "Kuinka kauan turvallisuusalan perustutkinto kestää?",
        answer: "Perustutkinnon laajuus on 180 osaamispistettä, mikä vastaa noin 3 vuotta opiskelua. Aikuiskoulutuksessa tai aiemman osaamisen tunnustamisella aika voi lyhentyä 1-2 vuoteen."
    },
    {
        question: "Sisältääkö perustutkinto vartijakoulutuksen?",
        answer: "Kyllä. Turvallisuusalan perustutkinto sisältää vartijakoulutuksen (120h), jonka jälkeen voit hakea vartijakorttia. Tutkinto antaa myös laajemman osaamisen alalle."
    },
    {
        question: "Onko koulutus maksullinen?",
        answer: "Perustutkinto on maksuton nuorille (alle 29v) ammatillisessa oppilaitoksessa. Aikuiskoulutuksessa voi olla omavastuumaksuja, mutta TE-toimiston tuet ovat mahdollisia."
    },
    {
        question: "Mitä osaamisaloja on tarjolla?",
        answer: "Voit erikoistua vartiointiin, pelastustoimintaan tai turvallisuusteknologiaan. Valinta riippuu oppilaitoksesta ja omista kiinnostuksistasi."
    }
];

const studyModules = [
    { name: "Turvallisuusalan yhteiset opinnot", points: "45 osp", description: "Lainsäädäntö, asiakaspalvelu, viestintä" },
    { name: "Vartiointi ja järjestyksenvalvonta", points: "45 osp", description: "Vartijakoulutus, voimankäyttö, kohteiden vartiointi" },
    { name: "Osaamisalan opinnot", points: "45 osp", description: "Erikoistuminen valittuun suuntaukseen" },
    { name: "Valinnaiset opinnot", points: "30 osp", description: "Syventävät ja täydentävät opinnot" },
    { name: "Yhteiset opinnot", points: "15 osp", description: "Kielet, matematiikka, yhteiskunta" }
];

const careerPaths = [
    "Vartija (kauppa, kiinteistö, teollisuus)",
    "Järjestyksenvalvoja",
    "Turvatarkastaja",
    "Pelastusalan tehtävät",
    "Turvallisuusasiantuntija",
    "Poliisi (jatkokoulutus)"
];
---

<BaseLayout
    title="Turvallisuusalan perustutkinto - Laaja ammatillinen koulutus | Vartijaksi.com"
    description="Kattava opas turvallisuusalan perustutkintoon. 180 osaamispisteen ammatillinen koulutus sisältää vartijakoulutuksen ja avaa laajat uramahdollisuudet."
    canonical="https://vartijaksi.com/turvallisuusalan-perustutkinto"
    type="article"
    publishedTime="2024-01-15"
    modifiedTime="2026-01-01"
    jsonLd={jsonLd}
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <Breadcrumbs items={breadcrumbs} />

        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <TOC items={tocItems} />

            <article class="flex-1 min-w-0">
                <header class="mb-8 md:mb-12">
                    <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary mb-4">
                        <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                        </svg>
                        Päivitetty 1.1.2026
                    </div>
                    <h1 class="text-2xl sm:text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-slate-900 via-primary to-slate-700 dark:from-white dark:via-primary dark:to-slate-300 bg-clip-text text-transparent">
                        Turvallisuusalan perustutkinto
                    </h1>
                    <p class="text-base sm:text-lg text-slate-600 dark:text-text-dim max-w-3xl">
                        Laaja ammatillinen tutkinto, joka antaa kattavan osaamisen turvallisuusalalle ja sisältää vartijakoulutuksen.
                    </p>
                </header>

                <section id="intro" class="mb-10 md:mb-14 scroll-mt-24">
                    <div class="grid sm:grid-cols-3 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">180</div>
                            <div class="text-sm font-medium">Osaamispistettä</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">tutkinnon laajuus</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">1-3v</div>
                            <div class="text-sm font-medium">Koulutuksen kesto</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">riippuen aiemmasta osaamisesta</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-emerald-600 dark:text-emerald-400 mb-2">Maksuton</div>
                            <div class="text-sm font-medium">Nuorille</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">alle 29-vuotiaat</div>
                        </div>
                    </div>
                </section>

                <section id="mika-on" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Mikä on turvallisuusalan perustutkinto?</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed mb-4">
                            Turvallisuusalan perustutkinto on ammatillinen tutkinto, joka antaa laajan osaamisen turvallisuusalan eri tehtäviin. Tutkinto on huomattavasti laajempi kuin pelkkä vartijakoulutus ja avaa ovet monipuolisiin uramahdollisuuksiin.
                        </p>
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Tutkinto sisältää vartijakoulutuksen (120h), joten valmistuttuasi voit hakea vartijakorttia. Lisäksi saat osaamista mm. pelastustoiminnasta, turvallisuusteknologiasta ja asiakaspalvelusta.
                        </p>
                    </div>
                </section>

                <section id="sisalto" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Tutkinnon sisältö</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Tutkinto koostuu pakollisista ja valinnaisista opinnoista. Voit erikoistua valitsemallesi osaamisalalle.
                    </p>

                    <div class="space-y-3 mb-6">
                        {studyModules.map((module) => (
                            <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                                <div class="flex items-start justify-between gap-4">
                                    <div>
                                        <h3 class="font-bold mb-1">{module.name}</h3>
                                        <p class="text-sm text-slate-600 dark:text-text-dim">{module.description}</p>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary flex-shrink-0">
                                        {module.points}
                                    </span>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>

                <section id="suoritustavat" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Suoritustavat</h2>

                    <div class="grid sm:grid-cols-2 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                                    <path d="M6 12v5c3 3 9 3 12 0v-5"/>
                                </svg>
                                Ammatillinen oppilaitos
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li>Peruskoulun jälkeen (nuorisoaste)</li>
                                <li>Päätoiminen opiskelu</li>
                                <li>Kesto tyypillisesti 3 vuotta</li>
                                <li>Opintotuki + kouluruokailu</li>
                            </ul>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                </svg>
                                Aikuiskoulutus / AHOT
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li>Aiemman osaamisen tunnustaminen</li>
                                <li>Työn ohessa opiskelu</li>
                                <li>Kesto 1-2 vuotta</li>
                                <li>TE-toimiston tuet mahdolliset</li>
                            </ul>
                        </div>
                    </div>

                    <div class="bg-primary/5 dark:bg-primary/10 border border-primary/20 rounded-xl p-5">
                        <p class="text-sm text-slate-600 dark:text-text-dim">
                            <strong class="text-slate-900 dark:text-white">Vinkki:</strong> Jos olet jo työelämässä, voit suorittaa tutkinnon <a href="/oppisopimuskoulutus" class="text-primary hover:underline">oppisopimuksella</a> palkallisena. Tämä on erinomainen vaihtoehto alan vaihtajille.
                        </p>
                    </div>
                </section>

                <section id="tyollistyminen" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Työllistyminen</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Turvallisuusalan perustutkinto avaa laajat uramahdollisuudet. Tutkinnon suorittaneet voivat työllistyä mm. seuraaviin tehtäviin:
                    </p>

                    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-surface-dark-lighter">
                        <ul class="grid sm:grid-cols-2 gap-3">
                            {careerPaths.map((path) => (
                                <li class="flex items-start gap-2 text-sm text-slate-600 dark:text-text-dim">
                                    <svg class="w-4 h-4 text-emerald-500 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                    <span>{path}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </section>

                <section id="faq" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-6">Usein kysytyt kysymykset</h2>
                    <div class="space-y-3">
                        {faqItems.map((item) => (
                            <FAQ question={item.question} answer={item.answer} />
                        ))}
                    </div>
                </section>

                <section class="mb-10 md:mb-14">
                    <h2 class="text-lg font-bold mb-4">Lähteet</h2>
                    <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://eperusteet.opintopolku.fi/" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                ePerusteet – Turvallisuusalan perustutkinto
                            </a>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://opintopolku.fi" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                Opintopolku – Hae koulutukseen
                            </a>
                        </li>
                    </ul>
                </section>

                <section class="grid sm:grid-cols-2 gap-4">
                    <a href="/oppisopimuskoulutus" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Oppisopimuskoulutus</h3>
                        <p class="text-xs text-slate-600 dark:text-text-dim">Opiskele palkallisena työn ohessa</p>
                    </a>
                    <a href="/vartijakoulutus" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Vartijakoulutus</h3>
                        <p class="text-xs text-slate-600 dark:text-text-dim">Vertaile koulutusmuotoja</p>
                    </a>
                </section>
            </article>
        </div>
    </div>
</BaseLayout>
