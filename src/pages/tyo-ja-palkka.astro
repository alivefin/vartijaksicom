];

const salaryLevels = [
    { level: "Taso 1", title: "Aloitteleva vartija", hourly: "12,50 €", monthly: "~2 200 €", description: "Perustehtävät, alle 2v kokemus" },
    { level: "Taso 2", title: "Kokenut vartija", hourly: "13,80 €", monthly: "~2 450 €", description: "2-5v kokemus, erityistehtävät" },
    { level: "Taso 3", title: "Erikoistunut vartija", hourly: "15,20 €", monthly: "~2 700 €", description: "Vaativat tehtävät, esimiesvastuu" }
];

const supplements = [
    { name: "Iltalisä", time: "klo 18:00–22:00", amount: "1,35 €/h" },
    { name: "Yölisä", time: "klo 22:00–06:00", amount: "2,70 €/h" },
    { name: "Lauantailisä", time: "la klo 06:00–24:00", amount: "2,10 €/h" },
    { name: "Sunnuntailisä", time: "su & pyhät", amount: "100% korotus" },
    { name: "Aattoilta", time: "pyhien aatot klo 18–24", amount: "100% korotus" }
];

const careerPaths = [
    {
        title: "Kohdevartija",
        description: "Perustehtävät kiinteässä kohteessa",
        icon: "shield"
    },
    {
        title: "Piiripartio",
        description: "Useiden kohteiden vartiointi",
        icon: "car"
    },
    {
        title: "Vuoroesimies",
        description: "Tiimin ja vuoron johtaminen",
        icon: "users"
    },
    {
        title: "Kohde-esimies",
        description: "Kohteen kokonaisvastuu",
        icon: "building"
    },
    {
        title: "Aluepäällikkö",
        description: "Useiden kohteiden johtaminen",
        icon: "map"
    },
    {
        title: "Turvallisuuspäällikkö",
        description: "Strateginen turvallisuusjohtaminen",
        icon: "briefcase"
    }
];
---

<BaseLayout
    title="Vartijan työ ja palkka 2026 - TES, lisät ja palkkataulukot | Vartijaksi.com"
    description="Kattava opas vartijan palkkaukseen Suomessa. Palkkataulukot 2026, työehtosopimus (TES), ilta- ja yölisät sekä urakehitysmahdollisuudet turvallisuusalalla."
    canonical="https://vartijaksi.com/tyo-ja-palkka"
    type="article"
    publishedTime="2024-01-15"
    modifiedTime="2026-01-01"
    jsonLd={jsonLd}
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <Breadcrumbs items={breadcrumbs} />

        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <!-- TOC Sidebar -->
            <TOC items={tocItems} />

            <!-- Main Content -->
            <article class="flex-1 min-w-0">
                <!-- Article Header -->
                <header class="mb-8 md:mb-12">
                    <div class="inline-flex items-center gap-2 rounded-full bg-emerald-100 dark:bg-emerald-900/30 px-3 py-1 text-xs font-semibold text-emerald-700 dark:text-emerald-400 mb-4">
                        <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                        </svg>
                        Päivitetty 1.1.2026
                    </div>
                    <h1 class="text-2xl sm:text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-slate-900 via-primary to-emerald-600 dark:from-white dark:via-primary dark:to-emerald-400 bg-clip-text text-transparent">
                        Vartijan työ ja palkka Suomessa
                    </h1>
                    <p class="text-base sm:text-lg text-slate-600 dark:text-text-dim max-w-3xl">
                        Kattava opas vartijan palkkaukseen, työehtosopimukseen ja urakehitykseen. Tietoa palkkatasoista, lisistä ja työsuhdemuodoista turvallisuusalalla.
                    </p>
                </header>

                <!-- Intro Section -->
                <section id="intro" class="mb-10 md:mb-14 scroll-mt-24">
                    <div class="prose prose-slate dark:prose-invert prose-lg max-w-none">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed mb-4">
                            Vartijan työ on monipuolista ja tarjoaa vakaita työllistymismahdollisuuksia. Turvallisuusala kasvaa Suomessa tasaisesti, ja ammattitaitoisille vartijoille on jatkuvaa kysyntää eri toimialoilla kauppakeskuksista teollisuuslaitoksiin.
                        </p>
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Palkkaus määräytyy <a href="https://finlex.fi/fi/viranomaiset/tyoehto/paatokset/2024/PAL2024-2" target="_blank" rel="noopener" class="text-primary hover:underline">Vartiointialan työehtosopimuksen (TES)</a> mukaan. TES takaa minimipalkat, lisät ja muut työsuhteen ehdot kaikille alan työntekijöille.
                        </p>
                    </div>
                </section>

                <!-- Palkkaus Section -->
                <section id="palkkaus" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Palkkaus ja työehtosopimus</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Vartijan palkka koostuu tuntipalkasta ja erilaisista lisistä. Palkkaus perustuu kolmeen tasoluokkaan, jotka määräytyvät tehtävän vaativuuden ja kokemuksen mukaan. Lisät voivat muodostaa jopa 20–30 % kokonaisansiosta.
                        </p>
                    </div>

                    <div class="grid sm:grid-cols-2 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                                    </svg>
                                </div>
                                <h3 class="font-bold">Peruspalkka</h3>
                            </div>
                            <p class="text-sm text-slate-600 dark:text-text-dim">
                                Tuntipalkka 12,50–15,20 €/h riippuen tasoluokasta ja tehtävän vaativuudesta.
                            </p>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 rounded-lg bg-emerald-500/10 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <path d="M12 8v8M8 12h8"/>
                                        <circle cx="12" cy="12" r="10"/>
                                    </svg>
                                </div>
                                <h3 class="font-bold">Lisät</h3>
                            </div>
                            <p class="text-sm text-slate-600 dark:text-text-dim">
                                Ilta-, yö-, lauantai- ja sunnuntailisät nostavat kokonaisansiota merkittävästi.
                            </p>
                        </div>
                    </div>
                </section>

                <!-- Palkkataulukko Section -->
                <section id="palkkataulukko" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Palkkataulukko 2026</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Alla olevat palkat ovat suuntaa-antavia ja perustuvat Vartiointialan TES:iin. Todelliset palkat voivat vaihdella työnantajan ja tehtävän mukaan.
                    </p>

                    <div class="overflow-x-auto rounded-xl border border-slate-200 dark:border-surface-dark-lighter">
                        <table class="min-w-full divide-y divide-slate-200 dark:divide-surface-dark-lighter">
                            <thead class="bg-slate-50 dark:bg-surface-dark">
                                <tr>
                                    <th scope="col" class="px-4 sm:px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-text-dim">Taso</th>
                                    <th scope="col" class="px-4 sm:px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-text-dim">Nimike</th>
                                    <th scope="col" class="px-4 sm:px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-text-dim">Tuntipalkka</th>
                                    <th scope="col" class="px-4 sm:px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-text-dim hidden md:table-cell">Kuukausipalkka*</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white dark:bg-surface-dark divide-y divide-slate-200 dark:divide-surface-dark-lighter">
                                {salaryLevels.map((level) => (
                                    <tr class="hover:bg-slate-50 dark:hover:bg-white/5 transition-colors">
                                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary/10 text-primary">
                                                {level.level}
                                            </span>
                                        </td>
                                        <td class="px-4 sm:px-6 py-4">
                                            <div class="font-medium">{level.title}</div>
                                            <div class="text-xs text-slate-500 dark:text-text-dim">{level.description}</div>
                                        </td>
                                        <td class="px-4 sm:px-6 py-4 font-semibold text-emerald-600 dark:text-emerald-400">{level.hourly}</td>
                                        <td class="px-4 sm:px-6 py-4 text-slate-600 dark:text-text-dim hidden md:table-cell">{level.monthly}</td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                    <p class="text-xs text-slate-500 dark:text-text-dim mt-3">
                        * Kuukausipalkka laskettu 160h/kk ilman lisiä. Todellinen ansio on usein korkeampi vuorolisien ansiosta.
                    </p>
                </section>

                <!-- Lisät Section -->
                <section id="lisat" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Lisät ja korvaukset</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Vuorotyölisät muodostavat merkittävän osan vartijan kokonaisansiosta. Erityisesti yö- ja viikonlopputyötä tekevät ansaitsevat huomattavasti enemmän kuin pelkän peruspalkan verran.
                    </p>

                    <div class="grid gap-3">
                        {supplements.map((supplement) => (
                            <div class="flex items-center justify-between bg-white dark:bg-surface-dark rounded-lg p-4 border border-slate-200 dark:border-surface-dark-lighter">
                                <div>
                                    <span class="font-semibold">{supplement.name}</span>
                                    <span class="text-sm text-slate-500 dark:text-text-dim ml-2">({supplement.time})</span>
                                </div>
                                <span class="font-bold text-emerald-600 dark:text-emerald-400">{supplement.amount}</span>
                            </div>
                        ))}
                    </div>

                    <div class="mt-6 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/50 rounded-lg p-4">
                        <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 text-amber-600 dark:text-amber-400 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M12 9v4M12 17h.01"/>
                                <path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                            </svg>
                            <div class="text-sm text-amber-800 dark:text-amber-200">
                                <strong>Huom:</strong> Lisät lasketaan peruspalkan päälle. Esimerkiksi yövuorossa (klo 22–06) saat sekä yölisän että mahdollisen viikonloppulisän.
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Työajat Section -->
                <section id="tyoajat" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Työajat ja vuorot</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Vartijoiden työajat vaihtelevat kohteen ja tehtävän mukaan. Tyypillisiä vuoroja ovat 8, 10 tai 12 tunnin vuorot. Monet kohteet vaativat ympärivuorokautista valvontaa, joten yö- ja viikonlopputyö on yleistä.
                        </p>
                    </div>

                    <div class="grid sm:grid-cols-3 gap-4">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">8h</div>
                            <div class="text-sm font-medium">Perusvuoro</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">Yleisin vuoropituus</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">12h</div>
                            <div class="text-sm font-medium">Pitkä vuoro</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">Viikonloput, erikoiskohteet</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">24/7</div>
                            <div class="text-sm font-medium">Päivystys</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">Kriittiset kohteet</div>
                        </div>
                    </div>
                </section>

                <!-- Työsuhdetyypit Section -->
                <section id="tyosuhteet" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Työsuhdetyypit</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Turvallisuusalalla on tarjolla erilaisia työsuhdemuotoja. Vakituiset kokoaikaiset työsuhteet ovat yleisiä suurissa vartiointiliikkeissä, mutta myös osa-aikatyö ja keikkatyö tarjoavat joustavia mahdollisuuksia.
                        </p>
                    </div>

                    <div class="space-y-4">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-lg bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                                        <polyline points="22 4 12 14.01 9 11.01"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="font-bold mb-1">Vakituinen kokoaikatyö</h3>
                                    <p class="text-sm text-slate-600 dark:text-text-dim">
                                        Täysi työaika (n. 160h/kk) kiinteässä kohteessa tai piiripartiona. Paras työsuhdeturva ja edut.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <circle cx="12" cy="12" r="10"/>
                                        <path d="M12 6v6l4 2"/>
