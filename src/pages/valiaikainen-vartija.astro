const courseContent = [
    "Vartijan oikeudet ja velvollisuudet",
    "Lainsäädännön perusteet (laki yksityisistä turvallisuuspalveluista)",
    "Turvallisuusalan toimintaympäristö",
    "Asiakaspalvelu ja vuorovaikutustaidot",
    "Uhka- ja väkivaltatilanteiden hallinta (teoria)",
    "Hätäensiapu",
    "Paloturvallisuuden perusteet",
    "Raportointi ja dokumentointi"
];
---

<BaseLayout
    title="Väliaikainen vartija - 40h koulutus | Vartijaksi.com"
    description="Kaikki tiedot väliaikaisen vartijan koulutuksesta. 40 tunnin kurssi mahdollistaa nopean työllistymisen. Kesto, hinta, sisältö ja rajoitukset."
    canonical="https://vartijaksi.com/valiaikainen-vartija"
    type="article"
    publishedTime="2024-01-15"
    modifiedTime="2026-01-01"
    jsonLd={jsonLd}
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <Breadcrumbs items={breadcrumbs} />

        <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <!-- TOC Sidebar -->
            <TOC items={tocItems} />

            <!-- Main Content -->
            <article class="flex-1 min-w-0">
                <!-- Article Header -->
                <header class="mb-8 md:mb-12">
                    <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary mb-4">
                        <svg class="w-3.5 h-3.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                            <circle cx="12" cy="12" r="10"/>
                            <path d="M12 6v6l4 2"/>
                        </svg>
                        Päivitetty 1.1.2026
                    </div>
                    <h1 class="text-2xl sm:text-3xl md:text-4xl font-black mb-4 bg-gradient-to-r from-slate-900 via-primary to-slate-700 dark:from-white dark:via-primary dark:to-slate-300 bg-clip-text text-transparent">
                        Väliaikainen vartija (40h)
                    </h1>
                    <p class="text-base sm:text-lg text-slate-600 dark:text-text-dim max-w-3xl">
                        Nopein väylä turvallisuusalalle. 40 tunnin koulutus mahdollistaa työskentelyn vartijana enintään 4 kuukauden ajan kalenterivuodessa.
                    </p>
                </header>

                <!-- Intro Section -->
                <section id="intro" class="mb-10 md:mb-14 scroll-mt-24">
                    <div class="grid sm:grid-cols-3 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">40h</div>
                            <div class="text-sm font-medium">Koulutuksen kesto</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">n. 1 viikko</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">4kk</div>
                            <div class="text-sm font-medium">Max työaika/vuosi</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">kalenterivuodessa</div>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter text-center">
                            <div class="text-3xl font-black text-primary mb-2">200-400€</div>
                            <div class="text-sm font-medium">Koulutuksen hinta</div>
                            <div class="text-xs text-slate-500 dark:text-text-dim mt-1">usein ilmainen työnantajalta</div>
                        </div>
                    </div>
                </section>

                <!-- Mikä on Section -->
                <section id="mika-on" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Mikä on väliaikainen vartija?</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed mb-4">
                            Väliaikainen vartija on henkilö, joka on suorittanut 40 tunnin vartijakoulutuksen ja saanut poliisilta väliaikaisen vartijakortin. Tämä on nopein tapa päästä työskentelemään turvallisuusalalla.
                        </p>
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Väliaikaisen vartijan status on tarkoitettu erityisesti alan kokeilemiseen, kesätöihin ja sesonkityöhön. Se sopii erinomaisesti opiskelijoille ja alasta kiinnostuneille, jotka haluavat tutustua vartijan työhön ennen pidempää sitoutumista.
                        </p>
                    </div>
                </section>

                <!-- Koulutuksen sisältö Section -->
                <section id="koulutus" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Koulutuksen sisältö</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        40 tunnin koulutus antaa perustiedot vartijan työhön. Koulutus sisältää sekä teoriaa että käytännön harjoituksia.
                    </p>

                    <div class="bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-surface-dark-lighter">
                        <h3 class="font-bold mb-4">Koulutuksessa käsiteltävät aiheet:</h3>
                        <ul class="grid sm:grid-cols-2 gap-3">
                            {courseContent.map((item) => (
                                <li class="flex items-start gap-2 text-sm text-slate-600 dark:text-text-dim">
                                    <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"/></svg>
                                    <span>{item}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </section>

                <!-- Kesto ja hinta Section -->
                <section id="kesto-hinta" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Kesto ja hinta</h2>

                    <div class="grid sm:grid-cols-2 gap-4 mb-6">
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <circle cx="12" cy="12" r="10"/>
                                    <path d="M12 6v6l4 2"/>
                                </svg>
                                Koulutuksen kesto
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li><strong>40 tuntia</strong> kokonaisuudessaan</li>
                                <li>Tyypillisesti 1 viikko (5 päivää)</li>
                                <li>Myös viikonloppukursseja tarjolla</li>
                                <li>Intensiivikurssit 3-4 päivässä</li>
                            </ul>
                        </div>
                        <div class="bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter">
                            <h3 class="font-bold mb-3 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                                </svg>
                                Koulutuksen hinta
                            </h3>
                            <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                                <li><strong>200-400 €</strong> yksityisiltä kouluttajilta</li>
                                <li>Usein <strong>ilmainen</strong> vartiointiliikkeiltä</li>
                                <li>TE-toimiston tuki mahdollinen</li>
                                <li>Oppisopimuksella palkallinen</li>
                            </ul>
                        </div>
                    </div>

                    <div class="bg-primary/5 dark:bg-primary/10 border border-primary/20 rounded-xl p-5">
                        <p class="text-sm text-slate-600 dark:text-text-dim">
                            <strong class="text-slate-900 dark:text-white">Vinkki:</strong> Monet suuret vartiointiliikkeet (Securitas, Avarn, jne.) järjestävät ilmaisia koulutuksia, jos sitoudut työskentelemään heille. Tämä on erinomainen tapa päästä alalle ilman omia kustannuksia.
                        </p>
                    </div>
                </section>

                <!-- Rajoitukset Section -->
                <section id="rajoitukset" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Rajoitukset</h2>
                    <p class="text-slate-600 dark:text-text-dim mb-6">
                        Väliaikaisen vartijan statukseen liittyy tärkeitä rajoituksia, jotka on hyvä tietää ennen koulutukseen hakeutumista.
                    </p>

                    <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/50 rounded-xl p-5 mb-6">
                        <h3 class="font-bold mb-3 text-amber-800 dark:text-amber-200">Tärkeimmät rajoitukset:</h3>
                        <ul class="text-sm text-amber-800 dark:text-amber-200 space-y-2">
                            <li class="flex items-start gap-2">
                                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 9v4M12 17h.01"/><circle cx="12" cy="12" r="10"/></svg>
                                <span><strong>Aikaraja:</strong> Enintään 4 kuukautta työskentelyä kalenterivuodessa</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 9v4M12 17h.01"/><circle cx="12" cy="12" r="10"/></svg>
                                <span><strong>Ei voimankäyttövälineitä:</strong> Koulutus ei oikeuta välineiden kantamiseen</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 9v4M12 17h.01"/><circle cx="12" cy="12" r="10"/></svg>
                                <span><strong>Rajoitetut tehtävät:</strong> Joitakin erikoistehtäviä ei voi suorittaa</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <svg class="w-4 h-4 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 9v4M12 17h.01"/><circle cx="12" cy="12" r="10"/></svg>
                                <span><strong>Kortin voimassaolo:</strong> Väliaikainen kortti on voimassa vain vuoden</span>
                            </li>
                        </ul>
                    </div>
                </section>

                <!-- Seuraava askel Section -->
                <section id="seuraava-askel" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-4">Seuraava askel: Vartijan peruskoulutus</h2>
                    <div class="prose prose-slate dark:prose-invert max-w-none mb-6">
                        <p class="text-slate-600 dark:text-text-dim leading-relaxed">
                            Jos haluat jatkaa vartijan työssä yli 4 kuukauden ajan tai päästä vakinaiseen työsuhteeseen, sinun tulee suorittaa vartijan peruskoulutus (80h). Yhdessä 40h koulutuksen kanssa tämä muodostaa 120 tunnin kokonaiskoulutuksen, joka oikeuttaa 5 vuoden vartijakorttiin.
                        </p>
                    </div>

                    <a href="/vartijan-peruskoulutus" class="group block bg-white dark:bg-surface-dark rounded-xl p-6 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <svg class="w-6 h-6 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Vartijan peruskoulutus (80h)</h3>
                                <p class="text-sm text-slate-600 dark:text-text-dim mb-2">Suorita jatkokoulutus ja saa 5 vuoden vartijakortti vakinaiseen työskentelyyn.</p>
                                <span class="inline-flex items-center text-primary text-sm font-bold">
                                    Lue lisää
                                    <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                        <path d="M5 12h14"/>
                                        <path d="m12 5 7 7-7 7"/>
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </a>
                </section>

                <!-- FAQ Section -->
                <section id="faq" class="mb-10 md:mb-14 scroll-mt-24">
                    <h2 class="text-xl sm:text-2xl font-bold mb-6">Usein kysytyt kysymykset</h2>
                    <div class="space-y-3">
                        {faqItems.map((item) => (
                            <FAQ question={item.question} answer={item.answer} />
                        ))}
                    </div>
                </section>

                <!-- Sources Section -->
                <section class="mb-10 md:mb-14">
                    <h2 class="text-lg font-bold mb-4">Lähteet</h2>
                    <ul class="text-sm text-slate-600 dark:text-text-dim space-y-2">
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://www.finlex.fi/fi/laki/ajantasa/2015/20151085" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                Laki yksityisistä turvallisuuspalveluista (1085/2015) – Finlex
                            </a>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                            </svg>
                            <a href="https://poliisi.fi/vartijaksi" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
                                Poliisi – Vartijaksi
                            </a>
                        </li>
                    </ul>
                </section>

                <!-- Next Steps -->
                <section class="grid sm:grid-cols-2 gap-4">
                    <a href="/vartijakoulutus" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                                <svg class="w-5 h-5 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                    <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                                    <path d="M6 12v5c3 3 9 3 12 0v-5"/>
                                </svg>
                            </div>
                        </div>
                        <h3 class="font-bold mb-1 group-hover:text-primary transition-colors">Vartijakoulutus</h3>
                        <p class="text-xs text-slate-600 dark:text-text-dim">Kaikki koulutusmuodot vertailussa</p>
                    </a>
                    <a href="/tyopaikat" class="group block bg-white dark:bg-surface-dark rounded-xl p-5 border border-slate-200 dark:border-surface-dark-lighter hover:border-primary dark:hover:border-primary transition-colors">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="w-10 h-10 rounded-lg bg-amber-500/10 flex items-center justify-center">
                                <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
